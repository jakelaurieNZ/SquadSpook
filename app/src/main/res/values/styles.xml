<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/ServerFilterOverflow</item>
    </style>

    <style name="ServerFilterOverflow" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Label">
        <item name="android:lines">1</item>
    </style>

    <style name="ServerItemHeader" parent="Label">
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ServerItemSubHeader" parent="Label">
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ServerItemBottomRow" parent="Label">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerItemText" parent="Label">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextHeader</item>
    </style>

</resources>
